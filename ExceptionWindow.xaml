<Window x:Class="WpfApp3.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exception Details" Height="100" Width="400">
    <Grid>
        <TextBlock Text="{Binding ExceptionDetails}" Margin="10" TextWrapping="Wrap"/>
    </Grid>
</Window>